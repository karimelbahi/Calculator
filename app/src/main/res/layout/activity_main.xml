<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/ground"

    tools:context="com.example.play_maker.calculator.MainActivity">

    <TextView
        android:layout_width="285dp"
        android:layout_height="22dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView1"
        android:hint=""
        android:textColor="#040404"
        android:textSize="20dp"
        android:textStyle="bold"
        android:background="#71c1bbbb"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp" />

    <TextView
        android:layout_width="285dp"
        android:layout_height="38dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView"
        android:hint="|"
        android:textColor="#040404"
        android:textSize="35dp"
        android:textStyle="bold"
        android:background="#71c1bbbb"
        android:layout_below="@+id/textView1"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignStart="@+id/textView1" />


    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/one"
        android:background="@drawable/onee"
        android:layout_above="@+id/min"
        android:layout_toLeftOf="@+id/two"
        android:layout_toStartOf="@+id/two" />
    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/two"
        android:background="@drawable/twoo"
        android:layout_below="@+id/fife"
        android:layout_toLeftOf="@+id/three"
        android:layout_toStartOf="@+id/three" />
    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/three"
        android:background="@drawable/three"
        android:layout_above="@+id/ans"
        android:layout_toLeftOf="@+id/ans"
        android:layout_toStartOf="@+id/ans" />
    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/four"
        android:background="@drawable/four"
        android:layout_above="@+id/one"
        android:layout_alignLeft="@+id/one"
        android:layout_alignStart="@+id/one" />
    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/fife"
        android:background="@drawable/fife"
        android:layout_alignTop="@+id/four"
        android:layout_alignLeft="@+id/two"
        android:layout_alignStart="@+id/two" />
    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/six"
        android:background="@drawable/six"
        android:layout_above="@+id/three"
        android:layout_toRightOf="@+id/fife"
        android:layout_toEndOf="@+id/fife" />
    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/seven"
        android:background="@drawable/seven"
        android:layout_alignTop="@+id/eight"
        android:layout_alignLeft="@+id/four"
        android:layout_alignStart="@+id/four" />
    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/eight"
        android:background="@drawable/eight"
        android:layout_above="@+id/fife"
        android:layout_toLeftOf="@+id/six"
        android:layout_toStartOf="@+id/six" />
    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/nine"
        android:background="@drawable/nine"
        android:layout_above="@+id/six"
        android:layout_toRightOf="@+id/eight"
        android:layout_toEndOf="@+id/eight" />
    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/zero"
        android:background="@drawable/ze"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/one"
        android:layout_alignStart="@+id/one" />
    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/point"
        android:background="@drawable/po"
        android:layout_below="@+id/two"
        android:layout_alignLeft="@+id/two"
        android:layout_alignStart="@+id/two" />
    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/ans"
        android:background="@drawable/answer"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/plus"
        android:layout_alignStart="@+id/plus" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/min"
        android:background="@drawable/mi"
        android:layout_alignTop="@+id/ans"
        android:layout_alignLeft="@+id/three"
        android:layout_alignStart="@+id/three" />
    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/plus"
        android:background="@drawable/pluss"
        android:layout_below="@+id/mul"
        android:layout_alignLeft="@+id/mul"
        android:layout_alignStart="@+id/mul" />
    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/mul"
        android:background="@drawable/ml"
        android:layout_below="@+id/div"
        android:layout_alignLeft="@+id/div"
        android:layout_alignStart="@+id/div" />
    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/div"
        android:background="@drawable/di"
        android:layout_alignTop="@+id/nine"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />


    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text=""
        android:id="@+id/clear"

        android:background="@drawable/deletee"
        android:layout_alignBottom="@+id/koko"
        android:layout_toLeftOf="@+id/koko"
        android:layout_toStartOf="@+id/koko" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text=""
        android:id="@+id/a"
        android:background="@drawable/ans"
        android:layout_alignBottom="@+id/koko"
        android:layout_toLeftOf="@+id/clear"
        android:layout_toStartOf="@+id/clear" />

    <Button
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:text=""
        android:id="@+id/koko"
        android:background="@drawable/coraa"
        android:layout_above="@+id/nine"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

</RelativeLayout>
